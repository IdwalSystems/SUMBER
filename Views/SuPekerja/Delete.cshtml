@model SUMBER.Models.Modules.SuPekerja

@{
    ViewData["Title"] = "Anggota - Hapus";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="card box-shadow">
    <div class="card-body">
        <div class="row">
            <div class="col-8">
                <h5 class="text-uppercase text-danger mb-0">Anggota - Hapus</h5>
                <span class="ac-ref"><a asp-action="Index" class="text-secondary">Indeks</a> / Hapus</span>
            </div>
            <div class="col-4 text-right">
                <a asp-action="Index" class="text-secondary"><i class="fas fa-times fa-2x"></i></a>
            </div>
    
        </div>
        <hr class="mt-2"/>
            <p class="text-danger">Anda pasti untuk menghapuskan maklumat berikut?</p>
            <div class="row">
            <div class="col-lg-12">
                <div class="form-row">
                    <div class="form-group col-md-4">
                        <label asp-for="NoKp" class="control-label"></label>
                        <input class="form-control form-control-sm" value="@Html.DisplayFor(model => model.NoKp)" readonly />
                    </div>
                    <div class="form-group col-md">
                        <label asp-for="Nama" class="control-label"></label>
                        <input class="form-control form-control-sm" value="@Html.DisplayFor(model => model.Nama)" readonly />
                    </div>
                </div>
                <div class="form-row ">
                    <div class="form-group col-md">
                        <label asp-for="Jawatan" class="control-label"></label>
                        <input value="@Html.DisplayFor(model => model.Jawatan)" class="form-control form-control-sm text-uppercase" readonly/>
                    </div>
                </div>
                <div class="form-row" hidden>
                    <div class="form-group col-md">
                        <label asp-for="Alamat1" class="control-label"></label>
                        <input class="form-control form-control-sm" value="@Html.DisplayFor(model => model.Alamat1)" readonly />
                    </div>
                </div>
                <div class="form-row" hidden> 
                    <div class="form-group col-md">
                        <input class="form-control form-control-sm" value="@Html.DisplayFor(model => model.Alamat2)" readonly />
                    </div>
                </div>
                <div class="form-row " hidden>
                    <div class="form-group col-md">
                        <input class="form-control form-control-sm" value="@Html.DisplayFor(model => model.Alamat3)" readonly />
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md " hidden>
                        <label asp-for="Poskod" class="control-label"></label>
                        <input class="form-control form-control-sm" value="@Html.DisplayFor(model => model.Poskod)" readonly />
                    </div>
                    <div class="form-group col-md " hidden>
                        <label asp-for="Bandar" class="control-label"></label>
                        <input class="form-control form-control-sm" value="@Html.DisplayFor(model => model.Bandar)" readonly />
                    </div>
                    <div class="form-group col-md">
                        <label asp-for="JNegeri" class="control-label"></label>
                        <input class="form-control form-control-sm" value="@Html.DisplayFor(model => model.JNegeri.Perihal)" readonly />
                    </div>
                </div>
                <div class="form-row " hidden>
                    <div class="form-group col-md">
                        <label asp-for="JAgama" class="control-label"></label>
                        <input class="form-control form-control-sm" value="@Html.DisplayFor(model => model.JAgama.Perihal)" readonly />
                    </div>
                    <div class="form-group col-md">
                        <label asp-for="JBangsa" class="control-label"></label>
                        <input class="form-control form-control-sm" value="@Html.DisplayFor(model => model.JBangsa.Perihal)" readonly />
                    </div>
                    <div class="form-group col-md">
                        <label asp-for="StatusKahwin" class="control-label"></label>
                        <input class="form-control form-control-sm" value="@Html.DisplayFor(model => model.StatusKahwin)" readonly />
                    <dd class="col-sm-10" >
                            @if (Model.StatusKahwin == 0)
                            {
                                @Html.DisplayName("BUJANG")
                            }
                            else
                            {
                                @Html.DisplayName("KAHWIN")
                            }

                    </dd>
                    </div>
                    <div class="form-group col-md">
                        <label asp-for="BilAnak" class="control-label"></label>
                        <input class="form-control form-control-sm" value="@Html.DisplayFor(model => model.BilAnak)" readonly />
                    </div>
                </div>
                <div class="form-row " hidden>
                    <div class="form-group col-md">
                        <label asp-for="JSuTarafJawatan" class="control-label"></label>
                        <input class="form-control form-control-sm" value="@Html.DisplayFor(model => model.JSuTarafJawatan)" readonly />
                    </div>
                <div class="form-row " hidden>
                    <div class="form-group col-md">
                        <label asp-for="TelefonRumah" class="control-label"></label>
                        <input class="form-control form-control-sm" value="@Html.DisplayFor(model => model.TelefonRumah)" readonly />
                    </div>
                    <div class="form-group col-md">
                        <label asp-for="TelefonBimbit" class="control-label"></label>
                        <input class="form-control form-control-sm" value="@Html.DisplayFor(model => model.TelefonBimbit)" readonly />
                    </div>
                    <div class="form-group col-md">
                        <label asp-for="Emel" class="control-label"></label>
                        <input class="form-control form-control-sm" value="@Html.DisplayFor(model => model.Emel)" readonly />
                    </div>
                </div>
                <div class="form-row " hidden>
                    <div class="form-group col-md">
                        <label asp-for="TarikhMasukKerja" class="control-label"></label>
                        <input class="form-control form-control-sm" value="@Html.DisplayFor(model => model.TarikhMasukKerja)" readonly />
                    </div>
                    <div class="form-group col-md">
                        <label asp-for="TarikhBerhentiKerja" class="control-label"></label>
                        <input class="form-control form-control-sm" value="@Html.DisplayFor(model => model.TarikhBerhentiKerja)" readonly />
                    </div>
                    <div class="form-group col-md">
                        <label asp-for="TarikhPencen" class="control-label"></label>
                        <input class="form-control form-control-sm" value="@Html.DisplayFor(model => model.TarikhPencen)" readonly />
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md " hidden>
                        <label asp-for="GajiPokok" class="control-label"></label>
                        <input class="form-control form-control-sm" value="@Html.DisplayFor(model => model.GajiPokok)" readonly />
                    </div>
                    <div class="form-group col-md " hidden>
                        <label asp-for="JCaraBayar" class="control-label"></label>
                        <input class="form-control form-control-sm" value="@Html.DisplayFor(model => model.JCaraBayar.Perihal)" readonly />
                    </div>
                    <div class="form-group col-md">
                        <label asp-for="NoAkaunBank" class="control-label"></label>
                        <input class="form-control form-control-sm" value="@Html.DisplayFor(model => model.NoAkaunBank)" readonly />
                    </div>
                </div>
            </div>
        </div>

        <div class="card box-shadow mb-3 " hidden>
            <div class="card-header">
                <h6>Tanggungan</h6>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table id="tblObjek" class="table table-sm" cellpadding="0" cellspacing="0">
                        <thead>
                            <tr>
                                <th style="width:50%">Nama</th>
                                <th style="width: 25%">No KP</th>
                                <th style="width: 25%">Hubungan</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody id="tbodyObjek">
                            @foreach (var item in ViewBag.suTanggungan)
                            {
                                <tr id="@item.Id">
                                    <td id="nokp" hidden>@item.NoKP</td>
                                    <td>@item.Nama</td>
                                    <td id="td1Amaun">@item.NoKP</td>
                                    <td id="td1Amaun">@item.Hubungan</td>
                                </tr>

                            }
                        </tbody>
                        <tfoot>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>

        <hr />
        <div class="form-group">
             <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <input type="submit" value="Hapus" class="btn ac-danger btn-sm" /> 
                <a asp-action="Index" class="btn ac-secondary btn-sm" style="width:auto">Batal</a>
            </form>
            
        </div>
    </div>

</div>