@model SUMBER.Models.Sumber.JSuKWSP

@{
    ViewData["Title"] = "KWSP - Tambah";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="card box-shadow">
    <div class="card-body">
        <div class="row">
            <div class="col-8">
                <h5 class="text-uppercase text-success mb-0">KWSP - Tambah</h5>
                <span class="ac-ref"><a asp-action="Index" class="text-secondary">Indeks</a> / Tambah</span>
            </div>
            <div class="col-4 text-right">
                <a asp-action="Index" class="text-secondary"><i class="fas fa-times fa-2x"></i></a>
            </div>

        </div>
        <hr class="mt-2"/>
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
             <div class="form-group">
                <label asp-for="GajiAwal" class="control-label"></label>
                <input asp-for="GajiAwal" class="form-control form-control-sm" type="number" min="0.00" max="999999999999999999.00" step="0.01"/>
                <span asp-validation-for="GajiAwal" class="text-danger"></span>
             </div>
            <div class="form-group">
                <label asp-for="GajiAkhir" class="control-label"></label>
                <input asp-for="GajiAkhir" class="form-control form-control-sm" type="number" min="0.00" max="999999999999999999.00" step="0.01"/>
                <span asp-validation-for="GajiAkhir" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PotongPekerja" class="control-label"></label>
                <input asp-for="PotongPekerja" class="form-control form-control-sm" type="number" min="0.00" max="999999999999999999.00" step="0.01"/>
                <span asp-validation-for="PotongPekerja" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PotongMajikan" class="control-label"></label>
                <input asp-for="PotongMajikan" class="form-control form-control-sm" type="number" min="0.00" max="999999999999999999.00" step="0.01"/>
                <span asp-validation-for="PotongMajikan" class="text-danger"></span>
            </div>
            <hr />
            <div class="form-group">
                <input type="submit" value="Simpan" class="btn ac-primary btn-sm" />
                 <a asp-action="Index" class="btn ac-secondary btn-sm" style="width:auto">Batal</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
