@model SUMBER.Models.Modules.SiAppInfo

@{

    var title = "Info Syarikat";
    ViewData["Title"] = title;
}

<div class="card box-shadow">
    <div class="card-body border">
        <div class="row">
            <div class="col-8">
                <h5 class="text-uppercase mb-0">Info Syarikat</h5>
                <span class="ac-ref">Indeks</span>
            </div>

        </div>
        <hr class="mt-2" />

        <div class="form-row">
            <div class="container text-center mb-4">
                <img src="~/img/@Model.CompanyLogoWeb"
                     class="img-fluid" style="max-width:120px;max-height:120px;"
                     asp-append-version="true" />
            </div>
            <div class="col-lg-12">
                <div class="form-row">
                    <div class="col-md-4">
                        <div class="form-row mb-2 ">
                            <div class="col-md-3">
                                <label class="form-control-label" asp-for="NoPendaftaran"></label>
                            </div>
                            <div class="col-md-9">
                                <div class="input-group input-group-sm">
                                    <input value="@Model.NoPendaftaran" class="form-control form-control-sm text-uppercase" readonly />
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-8">
                        <div class="form-row mb-2 ">
                            <div class="col-md-3">
                                <label class="form-control-label" asp-for="NamaSyarikat"></label>
                            </div>
                            <div class="col-md-9">
                                <div class="input-group input-group-sm">
                                    <input value="@Model.NamaSyarikat" class="form-control form-control-sm text-uppercase" readonly />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="form-row mb-2 ">
                    <div class="col-md-1">
                        <label class="form-control-label" asp-for="AlamatSyarikat1"></label>
                    </div>
                    <div class="col-md-11">
                        <div class="input-group input-group-sm">
                            <input value="@Model.AlamatSyarikat1" class="form-control form-control-sm text-uppercase" readonly />
                        </div>
                    </div>
                    <div class="col-md-1">
                        <label class="form-control-label"></label>
                    </div>
                    <div class="col-md-11">
                        <div class="input-group input-group-sm">
                            <input value="@Model.AlamatSyarikat2" class="form-control form-control-sm text-uppercase" readonly />
                        </div>
                    </div>
                    <div class="col-md-1">
                        <label class="form-control-label"></label>
                    </div>
                    <div class="col-md-11">
                        <div class="input-group input-group-sm">
                            <input value="@Model.AlamatSyarikat3" class="form-control form-control-sm text-uppercase" readonly />
                        </div>
                    </div>
                </div>
                <div class="form-row">
                    <div class="col-md-3">
                        <div class="form-row mb-2 ">
                            <div class="col-md-4">
                                <label class="form-control-label" asp-for="Bandar"></label>
                            </div>
                            <div class="col-md-8">
                                <div class="input-group input-group-sm">
                                    <input value="@Model.Bandar" class="form-control form-control-sm text-uppercase" readonly />
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-row mb-2 ">
                            <div class="col-md-3">
                                <label class="form-control-label" asp-for="Poskod"></label>
                            </div>
                            <div class="col-md-9">
                                <div class="input-group input-group-sm">
                                    <input value="@Model.Poskod" class="form-control form-control-sm text-uppercase" readonly />
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-row mb-2 ">
                            <div class="col-md-3">
                                <label class="form-control-label" asp-for="Daerah"></label>
                            </div>
                            <div class="col-md-9">
                                <div class="input-group input-group-sm">
                                    <input value="@Model.Daerah" class="form-control form-control-sm text-uppercase" readonly />
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-row mb-2 ">
                            <div class="col-md-3">
                                <label class="form-control-label" asp-for="Negeri"></label>
                            </div>
                            <div class="col-md-9">
                                <div class="input-group input-group-sm">
                                    <input value="@Model.Negeri" class="form-control form-control-sm text-uppercase" readonly />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="form-row">
                    <div class="col-md-3">
                        <div class="form-row mb-2 ">
                            <div class="col-md-4">
                                <label class="form-control-label" asp-for="TelSyarikat"></label>
                            </div>
                            <div class="col-md-8">
                                <div class="input-group input-group-sm">
                                    <input value="@Model.TelSyarikat" class="form-control form-control-sm text-uppercase" readonly />
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-row mb-2 ">
                            <div class="col-md-3">
                                <label class="form-control-label" asp-for="FaksSyarikat"></label>
                            </div>
                            <div class="col-md-9">
                                <div class="input-group input-group-sm">
                                    <input value="@Model.FaksSyarikat" class="form-control form-control-sm text-uppercase" readonly />
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-row mb-2 ">
                            <div class="col-md-3">
                                <label class="form-control-label" asp-for="EmelSyarikat"></label>
                            </div>
                            <div class="col-md-9">
                                <div class="input-group input-group-sm">
                                    <input value="@Model.EmelSyarikat" class="form-control form-control-sm" readonly />
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-row mb-2 ">
                            <div class="col-md-3">
                                <label class="form-control-label" asp-for="TarMula"></label>
                            </div>
                            <div class="col-md-9">
                                <div class="input-group input-group-sm">
                                    <input value="@Model.TarMula.ToString("dd/MM/yyyy")" class="form-control form-control-sm text-uppercase" readonly />

                                </div>
                                <span class="text-info">Baki Awal</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>

        <hr />
        <div class="form-group text-left">
            <a asp-action="Edit" asp-controller="SiAppInfo" asp-route-id="@Model.Id" class="btn ac-primary btn-sm" style="width:auto">Ubah</a>
        </div>

    </div>
</div>
