@model SUMBER.Models.Sumber.SuProfilGaji

@{
    ViewData["Title"] = "Profil Gaji Anggota - Papar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card box-shadow">
    <div class="card-body">
        <div class="row">
            <div class="col-8">
                <h5 class="text-uppercase text-dark mb-0">Profil Gaji Anggota - Papar</h5>
                <span class="ac-ref"><a asp-action="Index" class="text-secondary">Indeks</a> / Papar</span>
            </div>
            <div class="col-4 text-right">
                <a asp-action="Index" class="text-secondary"><i class="fas fa-times fa-2x"></i></a>
            </div>

        </div>
        <hr class="mt-2"/>
        <div class="form-group">
                        <label asp-for="SuPekerja" class="control-label"></label>
                        <input class="form-control form-control-sm" value="@Html.DisplayFor(model => model.SuPekerja.Nama)" readonly />
                    </div>
                    <div class="form-group">
                        <label asp-for="JSuKodGaji" class="control-label"></label>
                        <input class="form-control form-control-sm" value="@Html.DisplayFor(model => model.JSuKodGaji.Perihal)" readonly />
                    </div>
                    <div class="form-group">
                        <label asp-for="Amaun" class="control-label"></label>
                        <input class="form-control form-control-sm" value="@Html.DisplayFor(model => model.Amaun)" readonly />
                    </div>

        <hr />
        <div class="form-group">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn ac-primary btn-sm">Ubah</a> 
            <a asp-action="Index" class="btn ac-secondary btn-sm" style="width:auto">Batal</a>
        </div>
    </div>
</div>
