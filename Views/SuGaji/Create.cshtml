@model SUMBER.Models.Sumber.SuGaji

@{
    ViewData["Title"] = "Profil Gaji Anggota - Tambah";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card box-shadow">
    <div class="card-body">
        <div class="row">
            <div class="col-8">
                <h5 class="text-uppercase text-success mb-0">Profil Gaji Anggota- Tambah</h5>
                <span class="ac-ref"><a asp-action="Index" class="text-secondary">Indeks</a> / Tambah</span>
            </div>
            <div class="col-4 text-right">
                <a asp-action="Index" class="text-secondary"><i class="fas fa-times fa-2x"></i></a>
            </div>

        </div>
        <hr class="mt-2"/>
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
             <div class="form-group">
                            <label asp-for="SuPekerjaId" class="control-label"></label>
                            <select asp-for="SuPekerjaId" class="form-control form-control-sm" required>
                                <option value="" hidden>-- Pilih Anggota --</option>
                    @foreach (var s in ViewBag.SuPekerja)
                    {
                                <option value="@s.Id">@s.Nama </option>
                    }
                            </select>
                            <span asp-validation-for="SuPekerjaId" class="text-danger"></span>
             </div>
             <div class="form-group">
                            <label asp-for="JSuKodGajiId" class="control-label"></label>
                            <select asp-for="JSuKodGajiId" class="form-control form-control-sm" required>
                                <option value="" hidden>-- Pilih Kod Gaji --</option>
                    @foreach (var s in ViewBag.JSuKodGaji)
                    {
                                <option value="@s.ID">@s.Kod - @s.Perihal </option>
                    }
                            </select>
                            <span asp-validation-for="JSuKodGajiId" class="text-danger"></span>
             </div>
             <div class="form-group">
                <label asp-for="Amaun" class="control-label"></label>
                <input asp-for="Amaun" class="form-control form-control-sm" type="number" min="0.00" max="999999999999999999.00" step="0.01"/>
                <span asp-validation-for="Amaun" class="text-danger"></span>
             </div>
            <hr />
            <div class="form-group">
                <input type="submit" value="Simpan" class="btn ac-primary btn-sm" />
                 <a asp-action="Index" class="btn ac-secondary btn-sm" style="width:auto">Batal</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
