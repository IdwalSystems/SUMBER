@model SUMBER.Models.Modules.JKW

@{
    ViewData["Title"] = "Kump. Wang - Hapus";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>Hapus</h3>

<h5 class="text-danger">Anda pasti untuk menghapuskan maklumat berikut?</h5>
<div>
    <h5>Kumpulan Wang</h5>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Kod)
        </dt>
        <dd class="col-sm-10">
            @Model.Kod.ToUpper()
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Perihal)
        </dt>
        <dd class="col-sm-10">
            @Model.Perihal.ToUpper()
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Hapus" class="btn btn-danger btn-sm" /> |
        <a asp-action="Index">Kembali ke Indeks</a>
    </form>
</div>
