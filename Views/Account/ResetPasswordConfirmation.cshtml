@{
    ViewData["Title"] = "Log in - Set Semula Katalaluan";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}
<style>
    .wrap-login {
        padding: 42px 50px 33px 55px;
        background: #fff;
        border-radius: 10px;
        display: flex;
        flex-wrap: wrap;
        justify-content: space-evenly;
    }

    .login-pic {
        width: 100%;
    }
</style>
<div class="limiter">
    <div class="container-login100">
        <div class="wrap-login animate__bounceIn">
            <div class="login-pic text-center">
                <h3 class="text-success">Set Semula Katalaluan Berjaya</h3>
                <div class="container-login100-form-btn">
                    <a class="login100-form-btn" asp-controller="Account" asp-action="Login">
                        Kembali Ke Log Masuk
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>