@model SUMBER.Models.Sumber.JSuKodGaji

@{
    ViewData["Title"] = "Kod Gaji - Tambah";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card box-shadow">
    <div class="card-body">
        <div class="row">
            <div class="col-8">
                <h5 class="text-uppercase text-success mb-0">Kod Gaji - Tambah</h5>
                <span class="ac-ref"><a asp-action="Index" class="text-secondary">Indeks</a> / Tambah</span>
            </div>
            <div class="col-4 text-right">
                <a asp-action="Index" class="text-secondary"><i class="fas fa-times fa-2x"></i></a>
            </div>

        </div>
        <hr class="mt-2"/>
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                 <div class="form-group">
                     <div class="form-row ml-1">
                       <div class="card mb-2 col-md-6">
                        <div class="card-body pb-1 pt-1">
                            <div class="form-group mb-0 mt-1">
                                <label class="control-label">Jenis</label>
                            </div>
                         <div class="form-row ml-1">
                         <div class="custom-control custom-radio col-md-4">  
                            <input asp-for="FlJenis" class="radio-inline" id="jenis1" name="FlJenis" type="radio" value="0" checked/>
                            <label class="control-label" for="FlJenis">
                                        Elaun
                                    </label>
                            </div>
                            <div class="custom-control custom-radio col-md-4">
                            <input asp-for="FlJenis" class="radio-inline" id="jenis2" name="FlJenis" type="radio" value="1"/>
                            <label class="control-label" for="FlJenis">
                                        Potongan
                                    </label>
                        </div>
                     </div>
                </div>
             </div>
           </div>
           </div>
            <div class="form-group">
                <label asp-for="Kod" class="control-label"></label>
                <input asp-for="Kod" class="form-control form-control-sm" />
                <span asp-validation-for="Kod" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Perihal" class="control-label"></label>
                <input asp-for="Perihal" class="form-control form-control-sm text-uppercase" />
                <span asp-validation-for="Perihal" class="text-danger"></span>
            </div>           
            <hr />
            <div class="form-group">
                <input type="submit" value="Simpan" class="btn ac-primary btn-sm"  />
                 <a asp-action="Index" class="btn ac-secondary btn-sm" style="width:auto">Batal</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");


}
}


