@model SUMBER.Models.Modules.JBank

@{
    ViewData["Title"] = "Bank - Papar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card box-shadow">
    <div class="card-body">
        <div class="row">
            <div class="col-8">
                <h5 class="text-uppercase text-dark mb-0">Bank - Papar</h5>
                <span class="ac-ref"><a asp-action="Index" class="text-secondary">Indeks</a> / Papar</span>
            </div>
            <div class="col-4 text-right">
                <a asp-action="Index" class="text-secondary"><i class="fas fa-times fa-2x"></i></a>
            </div>
    
        </div>
        <hr class="mt-2"/>

        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Kod)
            </dt>
            <dd class="col-sm-10 text-uppercase">
                @Html.DisplayFor(model => model.Kod)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Nama)
            </dt>
            <dd class="col-sm-10 text-uppercase">
                @Html.DisplayFor(model => model.Nama)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.KodEFT)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.KodEFT)
            </dd>
        </dl>
        <hr />
        <div class="form-group">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn ac-primary btn-sm">Ubah</a> 
            <a asp-action="Index" class="btn ac-secondary btn-sm" style="width:auto">Batal</a>
        </div>
    </div>
</div>