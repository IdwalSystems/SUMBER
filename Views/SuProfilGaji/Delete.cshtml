@model SUMBER.Models.Sumber.SuProfilGaji

@{
    ViewData["Title"] = "Profil Gaji Anggota - Hapus";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card box-shadow">
    <div class="card-body">
        <div class="row">
            <div class="col-8">
                <h5 class="text-uppercase text-danger mb-0">Profil Gaji Anggota - Hapus</h5>
                <span class="ac-ref"><a asp-action="Index" class="text-secondary">Indeks</a> / Hapus</span>
            </div>
            <div class="col-4 text-right">
                <a asp-action="Index" class="text-secondary"><i class="fas fa-times fa-2x"></i></a>
            </div>

        </div>
        <hr class="mt-2"/>
            <p class="text-danger">Anda pasti untuk menghapuskan maklumat berikut?</p>
                    <div class="form-group">
                        <label asp-for="SuPekerja" class="control-label"></label>
                        <input class="form-control form-control-sm" value="@Html.DisplayFor(model => model.SuPekerja.Nama)" readonly />
                    </div>
                    <div class="form-group">
                        <label asp-for="JSuKodGaji" class="control-label"></label>
                        <input class="form-control form-control-sm" value="@Html.DisplayFor(model => model.JSuKodGaji.Perihal)" readonly />
                    </div>
                    <div class="form-group">
                        <label asp-for="Elaun" class="control-label"></label>
                        <input class="form-control form-control-sm" value="@Html.DisplayFor(model => model.Elaun)" readonly />
                    </div>

        <hr />
        <div class="form-group">
             <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <input type="submit" value="Hapus" class="btn ac-danger btn-sm" /> 
                <a asp-action="Index" class="btn ac-secondary btn-sm" style="width:auto">Batal</a>
            </form>

        </div>
    </div>

</div>
