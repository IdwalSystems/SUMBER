@model SUMBER.Models.Sumber.JSuPCB

@{
    ViewData["Title"] = "Jadual PCB - Hapus";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="card box-shadow">
    <div class="card-body">
        <div class="row">
            <div class="col-8">
                <h5 class="text-uppercase text-danger mb-0">PCB - Hapus</h5>
                <span class="ac-ref"><a asp-action="Index" class="text-secondary">Indeks</a> / Hapus</span>
            </div>
            <div class="col-4 text-right">
                <a asp-action="Index" class="text-secondary"><i class="fas fa-times fa-2x"></i></a>
            </div>

        </div>
        <hr class="mt-2"/>
            <p class="text-danger">Anda pasti untuk menghapuskan maklumat berikut?</p>
            <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.GajiAwal)
            </dt>
            <dd class="col-sm-10">
                @Model.GajiAwal
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.GajiAkhir)
            </dt>
            <dd class="col-sm-10">
                @Model.GajiAkhir
            </dd>
             <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.FlKategori)
            </dt>
            <dd class="col-sm-10" >
                @if (Model.FlKategori == 0)
                {
                    @Html.DisplayName("BUJANG")
                }
                else if (Model.FlKategori == 1)
                {
                    @Html.DisplayName("KAHWIN & ISTERI/SUAMI TIDAK BEKERJA")
                }
                else if (Model.FlKategori == 2)
                {
                    @Html.DisplayName("KAHWIN & ISTERI/SUAMI BEKERJA")
                }

            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Bujang)
            </dt>
            <dd class="col-sm-10">
                @Model.Bujang
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Kahwin)
            </dt>
            <dd class="col-sm-10">
                @Model.Kahwin
            </dd>
        </dl>

        <hr />
        <div class="form-group">
             <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <input type="submit" value="Hapus" class="btn ac-danger btn-sm" /> 
                <a asp-action="Index" class="btn ac-secondary btn-sm" style="width:auto">Batal</a>
            </form>

        </div>
    </div>

</div>