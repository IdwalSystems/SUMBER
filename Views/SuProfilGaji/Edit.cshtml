@model SUMBER.Models.Sumber.SuProfilGaji

@{
    ViewData["Title"] = "Profil Gaji Anggota - Ubah";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="card box-shadow">
    <div class="card-body">
        <div class="row">
            <div class="col-8">
                <h5 class="text-uppercase text-primary mb-0">Profil Gaji Anggota - Ubah</h5>
                <span class="ac-ref"><a asp-action="Index" class="text-secondary">Indeks</a> / <a asp-action="Details" asp-route-id="@Model.Id" class="text-secondary">Papar</a> / Ubah</span>
            </div>
            <div class="col-4 text-right">
                <a asp-action="Index" class="text-secondary"><i class="fas fa-times fa-2x"></i></a>
            </div>

        </div>
        <hr class="mt-2"/>
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="SuPekerjaId" />
            <div class="form-group">
                 <label asp-for="SuPekerja" class="control-label"></label>
                 <input class="form-control form-control-sm" value="@Html.DisplayFor(model => model.SuPekerja.Nama)" readonly/>
             </div>

             <div class="form-group">
                            <label asp-for="JSuKodGajiId" class="control-label"></label>
                            <select asp-for="JSuKodGajiId" class="form-control form-control-sm">
                                <option value="" hidden>-- Pilih Kod Gaji --</option>
                    @foreach (var s in ViewBag.JSuKodGaji)
                    {
                                                            <option value="@s.ID">@s.Kod - @s.Perihal </option>
                    }
                            </select>
                            <span asp-validation-for="JSuKodGajiId" class="text-danger"></span>
             </div>
            <div class="form-group">
                <label asp-for="Elaun" class="control-label"></label>
                <input asp-for="Elaun" class="form-control form-control-sm" type="number" min="0.00" max="999999999999999999.00" step="0.01"/>
                <span asp-validation-for="Elaun" class="text-danger"></span>
            </div>
            <hr />
            <div class="form-group">
                <input type="submit" value="Simpan" class="btn ac-primary btn-sm" />
                <a asp-action="Index" class="btn ac-secondary btn-sm" style="width:auto">Batal</a>
            </div>
        </form>
    </div>

</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
